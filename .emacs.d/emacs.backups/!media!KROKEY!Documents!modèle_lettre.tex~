\makeatother




\begin{document}

\begin{letter}{à Maud Cordray}

  % pas de marque pour la pliure
  \NoRule

  % Doit être défini si signature ne l'est pas.
  \name{Sylvain Rousseau}

  % en haut à gauche, coordonnées de l'expéditeur.
  \address{Sylvain Rousseau\\105, rue du Père de la Croix\\appt
    31\\86000 Poitiers}

  % en haut à droite, lieu de rédaction de la lettre.
  \lieu{à Poitiers}

  % en haut à gauche, téléphone de l'expéditeur.
  \telephone{0677095927}
  % en haut à gauche, email de l'expéditeur.
  \email{rousseau@sic.univ-poitiers.fr} \nofax

  % en bas à droite, signature de l'expéditeur.
  \signature{
    Sylvain Rousseau,\\
    \includegraphics[scale=1]{signature.jpg}
  }

  \def\concname{\bf Objet:~}
  % objet de la lettre.
  \conc{Attestation de non rémunération.}


  \opening{Madame, Monsieur,} je soussigné Sylvain Rousseau atteste
  sur l'honneur ne pas être rémunéré.  \closing{Je vous prie d'agréer,
    Madame, Monsieur, mes salutations distinguées.}

